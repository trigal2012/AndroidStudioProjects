<resources xmlns:android="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>

    <style name="teamView" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="scoreView" parent="@android:style/TextAppearance">
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="buttonText" parent="@android:style/Widget">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="resetButton" parent="@android:style/Widget">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>