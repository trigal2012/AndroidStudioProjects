<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title" parent="Theme.AppCompat.CompactMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent3</item>
        <item name="android:textSize">50sp</item>
        <item name="android:text">@string/title</item>
    </style>

    <style name="image" parent="Theme.AppCompat.CompactMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/lightcolorimage</item>
    </style>

    <style name="questionBaseFormat" parent="Theme.AppCompat.CompactMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@color/colorAccentTrans3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="questionFormat1" parent="questionBaseFormat">
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="questionFormat2" parent="questionBaseFormat">
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="answerBaseFormat" parent="Theme.AppCompat.CompactMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccentTrans2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="answerFormat1" parent="answerBaseFormat">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>


    <style name="answerText" parent="answerFormat1">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:hint">@string/aText</item>
    </style>


    <style name="linearLayout" parent="Theme.AppCompat.CompactMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/gameName</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="button" parent="Theme.AppCompat.CompactMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/colorAccentTrans3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:background">@color/colorAccentTrans2</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/pName</item>
        <item name="android:textSize">50sp</item>
    </style>



</resources>
