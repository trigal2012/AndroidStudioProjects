<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mindsport.MainActivity">

    <ImageView
        style="@style/image"/>

    <TextView
        android:id="@+id/gameName"
        style="@style/title"/>


    <LinearLayout
        android:id="@+id/questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gameName"
        android:orientation="vertical">

        <TextView
            android:id="@+id/q4"
            style="@style/questionFormat2"
            android:text="@string/q4" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent2">

            <RadioButton
                android:id="@+id/a4_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Othello" />

            <RadioButton
                android:id="@+id/a4_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Macbeth" />

            <RadioButton
                android:id="@+id/a4_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hamlet" />

            <RadioButton
                android:id="@+id/a4_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Romeo and Juliet" />
        </RadioGroup>

        <TextView
            android:id="@+id/q5"
            style="@style/questionFormat2"
            android:text="@string/q5" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent2">

            <RadioButton
                android:id="@+id/a5_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chruch" />

            <RadioButton
                android:id="@+id/a5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dance Hall" />

            <RadioButton
                android:id="@+id/a5_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Beach party" />

            <RadioButton
                android:id="@+id/a5_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blind Date" />
        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/next2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorAccent3"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />
</RelativeLayout>