<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mindsport.MainActivity">

    <ImageView
        style="@style/image"
        android:contentDescription="@string/contentDescription" />

    <TextView
        android:id="@+id/gameName"
        style="@style/title" />


    <LinearLayout
        android:id="@+id/questions"
        style="@style/linearLayout">

        <TextView
            android:id="@+id/q4"
            style="@style/questionFormat2"
            android:text="@string/q4" />

        <RadioGroup
            android:id="@+id/rg4"
            style="@style/answerFormat1">

            <RadioButton
                android:id="@+id/a4_1"
                style="@style/answerBaseFormat"
                android:text="@string/a4_1" />

            <RadioButton
                android:id="@+id/a4_2"
                style="@style/answerBaseFormat"
                android:text="@string/a4_2" />

            <RadioButton
                android:id="@+id/a4_3"
                style="@style/answerBaseFormat"
                android:text="@string/a4_3" />

        </RadioGroup>

        <TextView
            android:id="@+id/q5"
            style="@style/questionFormat2"
            android:text="@string/q5" />

        <RadioGroup
            android:id="@+id/rg5"
            style="@style/answerFormat1">

            <RadioButton
                android:id="@+id/a5_1"
                style="@style/answerBaseFormat"
                android:text="@string/a5_1" />

            <RadioButton
                android:id="@+id/a5_2"
                style="@style/answerBaseFormat"
                android:text="@string/a5_2" />

            <RadioButton
                android:id="@+id/a5_3"
                style="@style/answerBaseFormat"
                android:text="@string/a5_3" />

        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/next2"
        android:onClick="onButtonClick"
        style="@style/portraitBtn"
        android:text="@string/next" />
</RelativeLayout>