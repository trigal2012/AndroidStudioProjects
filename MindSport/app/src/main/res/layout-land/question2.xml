<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.mindsport.MainActivity">

    <ImageView
        style="@style/image"
        android:contentDescription="@string/contentDescription" />

    <TextView
        android:id="@+id/gameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/whiteish"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/title"
        android:textColor="@color/colorAccent3"
        android:textSize="50sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/q4"
                style="@style/questionFormat2"
                android:text="@string/q4" />

            <RadioGroup style="@style/answerFormat1">

                <RadioButton
                    android:id="@+id/a4_1"
                    style="@style/answerFormat2"
                    android:text="@string/a4_1" />

                <RadioButton
                    android:id="@+id/a4_2"
                    style="@style/answerFormat2"
                    android:text="@string/a4_2" />

                <RadioButton
                    android:id="@+id/a4_3"
                    style="@style/answerFormat2"
                    android:text="@string/a4_3" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/q5"
                style="@style/questionFormat2"
                android:text="@string/q5" />

            <RadioGroup style="@style/answerFormat1">

                <RadioButton
                    android:id="@+id/a5_1"
                    style="@style/answerFormat2"
                    android:text="@string/a5_1" />

                <RadioButton
                    android:id="@+id/a5_2"
                    style="@style/answerFormat2"
                    android:text="@string/a5_2" />

                <RadioButton
                    android:id="@+id/a5_3"
                    style="@style/answerFormat2"
                    android:text="@string/a5_3" />

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next2"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorAccentTrans3"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="50sp" />

</RelativeLayout>
